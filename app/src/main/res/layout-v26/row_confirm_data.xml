<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:minHeight="45dp"
    tools:ignore="UselessParent">

    <TextView
        android:id="@+id/confirm_hide_cid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/confirm_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:ellipsize="middle"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:minHeight="45dp"
        android:padding="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:singleLine="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded,TextViewEdits" />

    <TextView
        android:id="@+id/confirm_view_warehouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:ellipsize="middle"
        android:gravity="center"
        android:minHeight="45dp"
        android:padding="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:singleLine="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded,TextViewEdits" />

    <TextView
        android:id="@+id/confirm_view_slht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:gravity="end|center"
        android:minHeight="45dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/confirm_view_slkk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:gravity="end|center"
        android:minHeight="45dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/confirm_view_sll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:gravity="end|center"
        android:minHeight="45dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="#000000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/confirm_view_slxn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_margin="4dp"
        android:background="@drawable/border_text_fill"
        android:gravity="center|right"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number|numberDecimal"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:ignore="LabelFor,RtlHardcoded,TextFields" />

    <TextView
        android:id="@+id/confirm_view_giatri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_horizontal"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />
</TableRow>